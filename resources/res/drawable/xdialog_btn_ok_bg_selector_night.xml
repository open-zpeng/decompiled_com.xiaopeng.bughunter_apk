<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="45dp"/>
            <solid android:color="@color/x_dialog_btn_bg_disable_color_night"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="45dp"/>
            <solid android:color="@color/x_dialog_btn_ok_bg_pressed_color_night"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="45dp"/>
            <solid android:color="@color/x_dialog_btn_ok_bg_color"/>
        </shape>
    </item>
</selector>
